<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
 

<style>
      .card {
          transition: all 0.3s ease;
          border-bottom: 4px solid transparent;
      }
      
      .card:hover {
          transform: translateY(-10px);
          box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
      }
      
      .card.employee-relations:hover {
          border-bottom: 4px solid #0d6efd;
      }
      
      .card.total-employees:hover {
          border-bottom: 4px solid #0d6efd;
      }
      
      .card.leave-requests:hover {
          border-bottom: 4px solid #0d6efd;
      }
      
      .card.performance-goals:hover {
          border-bottom: 4px solid #0d6efd;
      }
      
      .card-value {
          transition: all 0.3s ease;
      }
      
      .card:hover .card-value {
          transform: scale(1.1);
          color: #212529 !important;
      }
      
      .card:hover .card-title {
          font-weight: 700 !important;
      }
      
      .card:hover .card-info {
          opacity: 1;
      }
      
      .card-info {
          opacity: 0.7;
          transition: opacity 0.3s ease;
      }
</style>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Smart HR</title>
    <link rel="icon" href="/images/logo.png" type="image/x-icon">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- External CSS -->
    <link rel="stylesheet" href="/css/dashboard.css">
</head>

<body>
    <!-- Include header partial -->
    <%- include('./partials/header') %>

    <!-- Breadcrumb -->
    <nav class="breadcrumb-container bg-light py-2">
        <div class="container-fluid">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a>Dashboard</a>
                </li>
            </ol>
        </div>
    </nav>

<!-- Main Content -->
<div class="container py-4">
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-4 g-4">
        
  <!-- Employee Relations Cases -->
  <div class="col">
      <div class="card shadow-sm h-100 border-0 rounded-3 overflow-hidden employee-relations">
          <div class="card-body p-4 d-flex flex-column justify-content-between">
              <div>
                  <h5 class="card-title fw-bold mb-3 text-primary">Employee Relations Cases</h5>
                  <p class="display-5 fw-bold mb-0 text-dark card-value"><%= stats?.relations ?? 0 %></p>
              </div>
              <div class="mt-3 pt-3 border-top border-light card-info">
                  <small class="text-muted">Active cases requiring attention</small>
              </div>
          </div>
      </div>
  </div>

  <!-- Employee Records -->
  <div class="col">
      <div class="card shadow-sm h-100 border-0 rounded-3 overflow-hidden total-employees">
          <div class="card-body p-4 d-flex flex-column justify-content-between">
              <div>
                  <h5 class="card-title fw-bold mb-3 text-primary">Total Employees</h5>
                  <p class="display-5 fw-bold mb-0 text-dark card-value"><%= stats?.totalEmployees ?? 0 %></p>
              </div>
              <div class="mt-3 pt-3 border-top border-light card-info">
                  <small class="text-muted">Current workforce size</small>
              </div>
          </div>
      </div>
  </div>

  <!-- Leave Requests Overview -->
  <div class="col">
      <div class="card shadow-sm h-100 border-0 rounded-3 overflow-hidden leave-requests">
          <div class="card-body p-4 d-flex flex-column justify-content-between">
              <div>
                  <h5 class="card-title fw-bold mb-3 text-primary">Leave Requests</h5>
                  <p class="display-5 fw-bold mb-0 text-dark card-value"><%= stats?.pendingLeaves ?? 0 %> <span class="fs-6 fw-normal">Pending</span></p>
              </div>
              <div class="mt-3 pt-3 border-top border-light card-info">
                  <small class="text-muted">Awaiting approval</small>
              </div>
          </div>
      </div>
  </div>

  <!-- Performance Stats -->
  <div class="col">
      <div class="card shadow-sm h-100 border-0 rounded-3 overflow-hidden performance-goals">
          <div class="card-body p-4 d-flex flex-column justify-content-between">
              <div>
                  <h5 class="card-title fw-bold mb-3 text-primary">Performance Goals</h5>
                  <p class="display-5 fw-bold mb-0 text-dark card-value"><%= stats?.completedGoals ?? 0 %> <span class="fs-6 fw-normal">of <%= stats?.totalGoals ?? 0 %> Complete</span></p>
              </div>
              <div class="mt-3 pt-3 border-top border-light card-info">
                  <small class="text-muted">Team achievement progress</small>
              </div>
          </div>
      </div>
  </div>

</div>
</div>

